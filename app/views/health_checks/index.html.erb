<ul>
  <% @health_check.each do |health_check| %>
    <div class="card">
    <% if health_check.templature < 37.0 %>
      <div class="green">
    <% elsif health_check.templature >= 37.0 && health_check.templature < 37.5 %>
      <div class="yellow">
    <% elsif health_check.templature >= 37.5 %>
      <div class="red">
    <% end %>
      <div class="card-header">
        <%= health_check.created_at.to_s(:datetime_jp) %>
      </div>
      <div class="card-body">
        <link rel="stylesheet" href="health_check.css">
        <p href="#">体温：<%= health_check.templature %></p><br />
        <p href="#">呼吸器症状：<%= health_check.respiratory_symptom %></p><br />
        <p href="#">喉、鼻、目の症状：<%= health_check.throat_nasus_eyes_symptom %></p><br />
        <p href="#">消化器症状：<%= health_check.digestive_symptom %></p><br />
        <p href="#">その他：<%= health_check.other %></p><br />
        <p href="#">メモ：<%= health_check.memo.gsub(/\r\n|\r|\n/, "<br>") %></p><br />
        <a href="#"><%= link_to '編集', edit_health_check_path(@health_check.ids) %></a>
      </div>
    </div>
  <% end %>
  <%= paginate @health_check %>
</ul>